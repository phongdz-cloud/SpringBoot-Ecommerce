<!DOCTYPE html>
<html xmlns:th="http://www.thymleaf.org">

<body>
	<div th:fragment="content" class="col-sm-2">
		<div>
			<a th:href="@{'/p/' + ${product.alias}}">
				<img th:src="@{${product.mainImagePath}}" width="150" />
				<br />
				<b>[[${product.shortName}]]</b>
			</a>
		</div>
		<div th:if="${product.discountPercent <= 0}">
			<div th:replace="product/product_fragment :: price_fragment(${product.price})" ></div>
		</div>
		<div th:if="${product.discountPercent > 0}">
			<span style="font-size: lagrger; color: darkred;">[[${CURRENCY_SYMBOL}]][[${product.discountPrice}]]</span>
			<del><span>[[${CURRENCY_SYMBOL}]][[${product.price}]]</span></del>
		</div>
	</div>


	<div th:fragment="price_fragment(productPrice)" th:remove="tag">
		<span th:if="${CURRENCY_SYMBOL_POSITION == 'Before price'}"
			th:remove="tag">[[${CURRENCY_SYMBOL}]][[${productPrice}]]</span>
		<span th:if="${CURRENCY_SYMBOL_POSITION == 'After price'}"
			th:remove="tag">[[${productPrice}]][[${CURRENCY_SYMBOL}]]</span>
	</div>
</body>

</html>