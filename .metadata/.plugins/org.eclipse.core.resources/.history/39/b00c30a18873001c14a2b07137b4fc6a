<!DOCTYPE html>
<html xmlns:th="http://www.thymleaf.org">

<head th:replace="fragments :: page_head(${pageTitle}, 'none')" />

<body>
	<div class="container-fluid">
		<div th:replace="navigation :: menu"></div>
		<div>&nbsp;</div>
		<div class="text-center">
			<h2>Manage Shipping Rates | [[${pageTitle}]]</h2>
		</div>

		<form th:action="@{/shipping/save}" method="post" th:object="${shipping}"
			style="max-width: 600px; margin: 0 auto">
			<input type="hidden" th:field="*{id}" />
			<div class="border border-secondary rounded p-3">
				<div class="form-group row">
					<label class="col-sm-4 col-form-label">Destination Country:</label>
					<div class="col-sm-8">
						<select class="form-control" th:field="*{country}">
							<th:block th:each="country : ${listCountries}">
								<option th:value="${country.id}">[[${country.name}]]</option>
							</th:block>
						</select>
					</div>
				</div>

				<div class="form-group row">
					<label class="col-sm-4 col-form-label">Destination State/Province:</label>
					<div class="col-sm-8">
						<input type="text" th:field="*{state}" class="form-control" required maxlength="45" minlength="3"
							list="listStates" />
						<datalist id="listStates"></datalist>
					</div>
				</div>

				<div class="form-group row">
					<label class="col-sm-4 col-form-label">Shipping Rate (per DIM weight)</label>
					<div class="col-sm-8">
						<input type="number" th:field="*{rate}" step="0.01" class="form-control" required min="0" />
					</div>
				</div>

				<div class="form-group row">
					<label class="col-sm-4 col-form-label">Days to deliver:</label>
					<div class="col-sm-8">
						<input type="number" th:field="*{days}" class="form-control" required min="0"/>
					</div>
				</div>

				<div class="form-group row">
					<label class="col-sm-4 col-form-label">Cash On Deliver (COD):</label>
					<div class="col-sm-8">
						<input type="checkbox" th:field="*{codSupported}" />
					</div>
				</div>

				<div class="text-center">
					<input type="submit" value="Save" class="btn btn-primary m-3" />
					<input type="button" value="Cancel" class="btn btn-secondary" id="buttonCancel" />
				</div>
			</div>
		</form>
		<div>&nbsp;</div>
		<div th:replace="modal_fragments :: modal_dialog"></div>
		<div th:replace="fragments :: footer"></div>
	</div>

	<script type="text/javascript">
		moduleURL = "[[@{/shipping}]]";
		contextPath = "[[@{/}]]";
		var dropDownCountry;
		var dataListState;
		var fieldState;

		$(document).ready(function () {
			dropDownCountry = $("#country");
			dataListState = $("#listStates");
			fieldState = $("#state");
			dropDownCountry.on("change", function () {
				loadStatesForCountry();
				fieldState.val("").focus();
			});
		});

		function loadStatesForCountry() {
			selectedCountry = $("#country option:selected");
			countryId = selectedCountry.val();
			url = contextPath + "states/list_by_country/" + countryId;

			$.get(url, function (responseJSON) {
				dataListState.empty();
				$.each(responseJSON, function (index, state) {
					$("<option>").val(state.name).text(state.name).appendTo(dataListState);
				});
			}).fail(function () {
				alert('failed to connect to the server!');
			});
		}
	</script>

	<script th:src="@{/js/common_form.js}"></script>
</body>

</html>